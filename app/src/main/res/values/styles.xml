<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/defaultText</item>
        <item name="android:positiveButtonText">@color/defaultText</item>
        <item name="android:editTextColor">@color/defaultText</item>
        <item name="android:textColorHint">@color/defaultText</item>

        <item name="android:fontFamily">@font/fira_sans</item>
        <item name="android:textSize">@dimen/text_size_default</item>

        <item name="android:buttonStyle">@style/ButtonStyle_Contained</item>
        <item name="spinnerStyle">@style/modeSpinnerStyle</item>

        <item name="android:windowBackground">@color/colorPrimaryDark</item>

    </style>

    <style name="ButtonStyle_Contained" parent="AppTheme">
        <item name="android:background">@drawable/button_background_contained</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ButtonStyle_Outlined" parent="AppTheme">
        <item name="android:background">@drawable/button_background_outlined</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/defaultText</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TabBarColors">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextColor">@color/dimmedText</item>
    </style>

    <style name="modeSpinnerStyle">
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/mode_select_shape</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:dropDownSelector">@android:drawable/arrow_down_float</item>
    </style>

</resources>
